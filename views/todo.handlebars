<h1>Your To Do List</h1>
<h2>You have {{listCount}} items on your to do list.</h2>
<form method="post">
  <label for="toDoName">Task: </label>
  <input type="text" name="name" id="toDoName">
  </br>
  <label for="toDoCity">City: </label>
  <input type="text" name="city" id="toDoCity">
  </br>
  <label for="toDoWeather">Minimum Temperature:</label>
  <input type="text" name="weather" id="toDoWeather">
  </br>
  <input type="submit" name="Add Item" value="Add Item">
</form>

{{#if toDo}}
<ul>
  {{#each toDo}}
  <li>
    <h3>{{this.name}}</h3>
    <p>{{this.city}}, {{this.temperature}}</p>
    <form method="post">
      <input type="hidden" name="id" value="{{this.id}}">
      <input type="submit" name="Done" value="Mark as Done">
    </for>
  </li>
  {{/each}}
</ul>

<input type="submit" name="checkWeather" value="checkWeather">
{{/if}}
